@using MvcProje1.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Mainlayout.cshtml";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">KATEGORİ ID</th>
            <th scope="col">KATEGORİ ADI</th>
            <th scope="col">KATEGORİ SİL</th>
            <th scope="col">KATEGORİ GUNCELLE</th>
            <th scope="col">ALERT</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var ktgr in Model)
       {
        <tr>
            <td>
                @ktgr.KATEGORIID
            </td>
            <td>
                @ktgr.KATEGORIAD
            </td>
            <td><a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
            <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GUNCELLE</a></td>
            <td>@Html.ActionLink("SİL BUTONU","SIL",new {id=ktgr.KATEGORIID },new {@class="btn btn-warning",onclick="return confirm('Silmek İstediğinize Emin Misiniz')" })</td>

        </tr>
       }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model , sayfa=>Url.Action("Index",new { sayfa}))
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

